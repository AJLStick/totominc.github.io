{
	"name": "index-bower",
	"version": "1.0.0",
	"dependencies": {
		"jquery": "latest",
		"bootstrap": "http://github.com/components/bootstrap.git",
		"fontawesome": "http://github.com/components/font-awesome.git",
		"ionicons": "latest"
	},
	"install": {
		"base": "lib",
        "path" : {
            "js": "{name}/js",
            "css": "{name}/css",
            "eot": "{name}/fonts",
            "svg": "{name}/fonts",
            "ttf": "{name}/fonts",
            "woff": "{name}/fonts",
            "woff2": "{name}/fonts",
            "otf": "{name}/fonts"
        },
		"sources": {
			"jquery": "bower_components/jquery/dist/*.js",
			"bootstrap": [
				"bower_components/bootstrap/css/*.css",
				"bower_components/bootstrap/js/*.js",
				"bower_components/bootstrap/fonts/*.*"
			],
			"fontawesome": [
				"bower_components/fontawesome/css/*.css",
				"bower_components/fontawesome/fonts/*.*"
			],
			"ionicons": [
				"bower_components/ionicons/css/*.css",
				"bower_components/ionicons/fonts/*.*"
			]
		}
	}
}